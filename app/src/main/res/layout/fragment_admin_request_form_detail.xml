<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logged.Admin.FormManagement.Request.AdminRequestFormDetailFragment">


    <ScrollView
        android:id="@+id/scroll_view_ARFD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/linear_layout_form_main_ARFD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_layout_form_ARFD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_donee_id_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_donee_id"
                    android:textColor="#0E86D4"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/field_donee_id_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/uneditable_editview_border"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_request_form_id_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_request_form_id"
                    android:textColor="#0E86D4"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/field_request_form_id_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/uneditable_editview_border"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_category_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_category"
                    android:textColor="#0E86D4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/field_category_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/uneditable_editview_border"
                    android:padding="10dp"
                    android:hint=""
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_quantity_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_quantity"
                    android:textColor="#0E86D4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/field_quantity_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/uneditable_editview_border"
                    android:padding="10dp"
                    android:hint=""
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_status_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_status"
                    android:textColor="#0E86D4"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spin_status_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:background="@drawable/spinner_design"
                    android:entries="@array/statusListRF"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_button_ARFD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_update_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#00A300"
                    android:text="@string/btn_update"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_cancel_ARFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#FFB52E"
                    android:text="@string/btn_cancel"
                    android:textColor="#4E342E" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>