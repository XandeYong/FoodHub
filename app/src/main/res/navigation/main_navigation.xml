<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment" >


    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.foodhub.ui.news.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.foodhub.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_mainActivityLogged"
            app:destination="@id/mainActivityLogged" />
    </fragment>
    <fragment
        android:id="@+id/mainActivityLogged"
        android:name="com.example.foodhub.MainActivityLogged"
        android:label="MainActivityLogged"
        tools:layout="@layout/activity_main_logged" >
        <action
            android:id="@+id/action_mainActivityLogged_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_mainActivityLogged_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainActivityLogged_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_mainActivityLogged_to_viewCategoryFragment"
            app:destination="@id/viewCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.foodhub.Logged.All.Account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
            android:id="@+id/profileFragment"
        android:name="com.example.foodhub.Logged.All.Account.Profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.foodhub.Logged.All.Account.Profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/viewCategoryFragment"
        android:name="com.example.foodhub.Logged.Admin.Category.ViewCategoryFragment"
        android:label="fragment_view_category"
        tools:layout="@layout/fragment_view_category" />
</navigation>